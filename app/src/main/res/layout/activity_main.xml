<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#C5C1C1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/permanentmarkereegular"
        android:text="Stage 1"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="129dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:text="Set Preferrences"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/readWord"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="ex:Pink"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button3"
        android:layout_width="59dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:background="@color/white"
        android:clickable="false"
        android:fontFamily="@font/permanentmarkereegular"
        android:text="Easy"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/readWord"
        app:layout_constraintStart_toEndOf="@+id/readWord" />

    <Button
        android:id="@+id/button"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:clickable="false"
        android:fontFamily="@font/permanentmarkereegular"
        android:text="Diff"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/permanentmarkereegular"
        android:text="EasyWords"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/readWord"
        app:layout_constraintTop_toBottomOf="@+id/readWord" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="280dp"
        android:layout_height="92dp"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/permanentmarkereegular"
        android:text="DifficultWords"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="280dp"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        app:flow_horizontalAlign="center"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:text="Finish"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonFinish"
        app:layout_constraintTop_toBottomOf="@+id/buttonFinish" />

</androidx.constraintlayout.widget.ConstraintLayout>