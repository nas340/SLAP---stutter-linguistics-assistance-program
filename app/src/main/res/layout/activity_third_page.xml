<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdPage"
    android:background="#C5C1C1">


    <TextView
        android:id="@+id/Heading_P3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Write your paragraph"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userenter_para_p3"
        android:layout_width="243dp"
        android:layout_height="173dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your paragragh"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/Heading_P3"
        app:layout_constraintTop_toBottomOf="@+id/Heading_P3" />

    <Button
        android:id="@+id/Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Enter"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/userenter_para_p3"
        app:layout_constraintStart_toEndOf="@+id/userenter_para_p3" />

    <TextView
        android:id="@+id/textViewpara_p3"
        android:layout_width="262dp"
        android:layout_height="118dp"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:verticalScrollbarPosition="right"
        app:layout_constraintStart_toStartOf="@+id/userenter_para_p3"
        app:layout_constraintTop_toBottomOf="@+id/userenter_para_p3" />

    <TextView
        android:id="@+id/synnonym_heading_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="28dp"
        android:text="Synnonym"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewpara_p3"
        app:layout_constraintTop_toBottomOf="@+id/textViewpara_p3" />

    <Button
        android:id="@+id/hardword_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Button"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewpara_p3"
        app:layout_constraintTop_toBottomOf="@+id/synnonym_heading_p3" />

    <Spinner
        android:id="@+id/synnonyms_p3"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/hardword_p3"
        app:layout_constraintStart_toEndOf="@+id/hardword_p3"
        app:layout_constraintTop_toTopOf="@+id/hardword_p3"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>